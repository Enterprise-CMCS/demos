{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "lib": ["es2020", "DOM"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "baseUrl": "src",
    "strict": true,
    "types": ["vitest/globals"],
    "paths": {
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "hooks/*": ["hooks/*"],
      "mock-data/*": ["mock-data/*"],
      "queries/*": ["queries/*"],
      "icons": ["components/icons/index.ts"],
      "dates": ["components/application/dates/index.ts"],
      "demos-server": ["../../server/src/types.ts"],
      "demos-server-constants": ["../../server/src/constants.ts"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "types", "eslint.config.js"]
}
