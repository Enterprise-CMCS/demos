model BundlePhaseDate {
  bundleId   String   @map("bundle_id") @db.Uuid
  phaseId    String   @map("phase_id")
  dateTypeId String   @map("date_type_id")
  dateValue  DateTime @map("date_value") @db.Timestamptz()
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz()

  bundlePhase BundlePhase @relation(fields: [bundleId, phaseId], references: [bundleId, phaseId])
  dateType    DateType    @relation(fields: [dateTypeId], references: [id])

  @@id([bundleId, phaseId, dateTypeId])
  @@map("bundle_phase_date")
}
