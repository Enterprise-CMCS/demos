model BundlePhase {
  bundleId      String   @map("bundle_id") @db.Uuid
  phaseId       String   @map("phase_id")
  phaseStatusId String   @map("phase_status_id")
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt     DateTime @updatedAt @map("updated_at") @db.Timestamptz()

  bundle          Bundle            @relation(fields: [bundleId], references: [id])
  phase           Phase             @relation(fields: [phaseId], references: [id])
  phaseStatus     PhaseStatus       @relation(fields: [phaseStatusId], references: [id])
  bundlePhaseDate BundlePhaseDate[]

  @@id([bundleId, phaseId])
  @@map("bundle_phase")
}
