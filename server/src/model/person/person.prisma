model Person {
  id           String   @default(uuid()) @db.Uuid
  personTypeId String   @map("person_type_id")
  email        String
  fullName     String   @map("full_name")
  displayName  String   @map("display_name")
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz()
  updatedAt    DateTime @updatedAt @map("updated_at") @db.Timestamptz()

  personType PersonType  @relation(fields: [personTypeId], references: [id])
  user                        User?
  systemRoleAssignments       SystemRoleAssignment[]
  demonstrationRoleAssignment DemonstrationRoleAssignment[]
  personState                 PersonState[]

  @@id([id])
  @@unique([id, personTypeId])
  @@map("person")
}
