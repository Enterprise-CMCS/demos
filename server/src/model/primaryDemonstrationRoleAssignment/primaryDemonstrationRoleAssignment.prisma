model PrimaryDemonstrationRoleAssignment {
  personId        String @map("person_id") @db.Uuid
  demonstrationId String @map("demonstration_id") @db.Uuid
  roleId          String @map("role_id")

  demonstrationRoleAssignment DemonstrationRoleAssignment @relation(fields: [personId, demonstrationId, roleId], references: [personId, demonstrationId, roleId])

  @@id([demonstrationId, roleId])
  @@unique([personId, demonstrationId, roleId]) // This isnt actually required in Postgres; however prisma requires that we explicitly notate this as a unique constraint
  @@map("primary_demonstration_role_assignment")
}
