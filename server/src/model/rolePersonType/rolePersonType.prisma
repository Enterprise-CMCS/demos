model RolePersonType {
  roleId       String @map("role_id")
  personTypeId String @map("person_type_id")

  role                         Role                          @relation(fields: [roleId], references: [id])
  personType                   PersonType                    @relation(fields: [personTypeId], references: [id])
  systemRoleAssignments        SystemRoleAssignment[]
  demonstrationRoleAssignments DemonstrationRoleAssignment[]

  @@id([roleId, personTypeId])
  @@map("role_person_type")
}
