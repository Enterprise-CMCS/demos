{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["es2020"],
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.test.ts"
  ] 
}
